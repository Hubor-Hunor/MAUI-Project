<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFrontend.PersonDetailPage"
             Title="PersonDetailPage">
    <VerticalStackLayout >
        <Label Text="{Binding Person.PersonName}" FontSize="Title" HorizontalOptions="CenterAndExpand" Margin="0,20,0,0"/>
        <Label Text="{Binding Person.PersonAge, StringFormat='Age: {0}'}" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
        <Label Text="{Binding Person.PersonGender, StringFormat='Gender: {0}'}" FontSize="Large" HorizontalOptions="CenterAndExpand"/>
    </VerticalStackLayout>
</ContentPage>